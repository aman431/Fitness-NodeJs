<!DOCTYPE html>
<html>
	<head>
		<title>SignUp page</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" crossorigin="anonymous">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<style>
			h1{
				font-size:50px;
				text-align: center;
				margin-top: 20px;
				margin-bottom: 50px;
			}
			.main{
				font-size:25px;
			}
			.main input{
				font-size:25px;
			}
			.main button{
				font-size: 20px;
			}
			.main a{
				font-size: 20px;
			}
		</style>
	</head>
	<body>
		<h1> Sign Up page </h1>


		<form action="/signup" method="POST" autocomplete="off" style="padding:100px; padding-top: 10px;">
			<div class="main" style="height:250px; width:800px;">
				<% if(typeof alert != 'undefined') { %>
					<% alert.forEach(function(error) { %>
						<div class="alert alert-warning alert-dismissible fade show" role="alert">
							  <%= error.msg %>
							  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
							    <span aria-hidden="true">&times;</span>
							  </button>
						</div>
					<% }) %>
				<% } %>

				<div class="form-row">
						<div class="form-group col-md-6">
							<label>FirstName</label>
							<input type="text" class="form-control" name = "firstname" placeholder="FirstName">
						</div>
						<div class="form-group col-md-6">
							<label>LastName</label>
							<input type="text" class="form-control" name = "lastname" placeholder="LastName">
						</div>
				</div>
				<div class='form-group'>
						<label>Email</label>
						<input type="text" class="form-control" name = "email" placeholder="Email">
				</div>

				<div class='form-group'>
						<label>Number</label>
						<input type="text" class="form-control" name = "number" placeholder="Number" >
				</div>
				<div class='form-row'>
					<div class="form-group col-md-6">
						<label>Password</label>
						<input type="password" class="form-control" name = "password" placeholder="Password">
					</div>
					<div class="form-group col-md-6">
						<label>Re-Password</label>
						<input type="password" class="form-control" name = "retype_password" placeholder="Re-Password">
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-info"><i class="fa fa-user" style="padding-right:10px;"></i>Submit</button>
					<a class="btn btn-secondary" href="/login"><i class="fa fa-sign-in" style="padding-right:10px;"></i>Login</a>
				</div>
			</div>
		</form>
	</body>
</html>
